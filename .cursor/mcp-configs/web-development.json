{
  "mcpServers": {
    "web-search": {
      "command": "npx",
      "args": ["-y", "@smithery/cli@latest", "run", "@mzxrai/mcp-webresearch", "--config", "{}"],
      "env": {}
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@smithery/cli@latest", "run", "@smithery-ai/brave-search", "--config", "{\"braveApiKey\":\"YOUR_BRAVE_API_KEY\"}"],
      "env": {
        "BRAVE_API_KEY": "YOUR_BRAVE_API_KEY"
      }
    },
    "browser-tools": {
      "command": "npx",
      "args": ["-y", "mcp-browser-tools@latest"],
      "env": {}
    },
    "firecrawl": {
      "command": "npx",
      "args": ["-y", "@firecrawl/mcp-server@latest"],
      "env": {
        "FIRECRAWL_API_KEY": "YOUR_FIRECRAWL_API_KEY"
      }
    },
    "perplexity": {
      "command": "npx",
      "args": ["-y", "perplexity-mcp@latest"],
      "env": {
        "PERPLEXITY_API_KEY": "YOUR_PERPLEXITY_API_KEY"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github@latest"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_TOKEN"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem@latest", "/path/to/your/projects"],
      "env": {}
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres@latest"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "postgresql://username:password@localhost:5432/database"
      }
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite@latest", "--db-path", "./database.sqlite"],
      "env": {}
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "mcp-server-docker@latest"],
      "env": {}
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git@latest"],
      "env": {}
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack@latest"],
      "env": {
        "SLACK_BOT_TOKEN": "YOUR_SLACK_BOT_TOKEN",
        "SLACK_TEAM_ID": "YOUR_SLACK_TEAM_ID"
      }
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-notion@latest"],
      "env": {
        "NOTION_API_KEY": "YOUR_NOTION_API_KEY"
      }
    },
    "google-drive": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-gdrive@latest"],
      "env": {
        "GOOGLE_CLIENT_ID": "YOUR_GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET": "YOUR_GOOGLE_CLIENT_SECRET"
      }
    },
    "aws": {
      "command": "npx",
      "args": ["-y", "mcp-server-aws@latest"],
      "env": {
        "AWS_ACCESS_KEY_ID": "YOUR_AWS_ACCESS_KEY",
        "AWS_SECRET_ACCESS_KEY": "YOUR_AWS_SECRET_KEY",
        "AWS_REGION": "us-east-1"
      }
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "mcp-server-vercel@latest"],
      "env": {
        "VERCEL_TOKEN": "YOUR_VERCEL_TOKEN"
      }
    },
    "netlify": {
      "command": "npx",
      "args": ["-y", "mcp-server-netlify@latest"],
      "env": {
        "NETLIFY_ACCESS_TOKEN": "YOUR_NETLIFY_TOKEN"
      }
    }
  }
} 